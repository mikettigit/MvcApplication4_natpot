@using System.Web.Mvc

@helper Year()
{      
    @DateTime.Now.Year
}

@helper MenuItemClass(ViewContext Context, string ClassName, string ConditionControllerName)
{
    string ControllerName = Context.RequestContext.RouteData.Values["controller"] as string;
    if (ControllerName.ToLower() == "pages") {
        ControllerName = Path.GetFileNameWithoutExtension(((RazorView)Context.View).ViewPath);
    }
    @((ConditionControllerName.ToLower().Contains(ControllerName.ToLower())) ? ClassName : "");
} 

@helper MenuItemClass(ViewContext Context, string ClassName, string ConditionControllerName, string ConditionActionName)
{
    string ControllerName = Context.RequestContext.RouteData.Values["controller"] as string;
    string ActionName = Context.RequestContext.RouteData.Values["action"] as string;
    @((ConditionControllerName.ToLower().Contains(ControllerName.ToLower())
                && ConditionActionName.ToLower().Contains(ActionName.ToLower())) ? ClassName : "");
}    

@helper MenuItemClass(ViewContext Context, string ClassName, string ConditionControllerName, string ConditionActionName, string ConditionParam1Value)
{
    string ControllerName = Context.RequestContext.RouteData.Values["controller"] as string;
    string ActionName = Context.RequestContext.RouteData.Values["action"] as string;
    string Param1Value = Context.RequestContext.RouteData.Values["param1"] as string;
    @((ConditionControllerName.ToLower().Contains(ControllerName.ToLower()) 
                && ConditionActionName.ToLower().Contains(ActionName.ToLower())
                && ConditionParam1Value.ToLower().Contains(Param1Value.ToLower())) ? ClassName : "");
} 