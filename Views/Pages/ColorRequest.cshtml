@using MvcApplication4_natpot.Models
@{
    Post Post = (Post)ViewData["Post"];
    ViewBag.Title = "Выбор цвета натяжного потолка, палитра цветов - «Облако»";
    ViewBag.MetaKeywords = "выбор цвета натяжных потолков, палитра цветов натяжного потолка, натяжные потолки цвета каталог";
    ViewBag.MetaDescription = "Подбор цвета натяжных потолков онлайн, матовые и лаковые натяжные потолки в Мурманске";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<article class="article clearfix">
    @if (Post != null)
    {
    @Html.Raw(Post.Content)
    }
    else {
    <h1 class="a_title">Выбрать цвет натяжного потолка</h1>

    <script src="/color_math/js/swfobject.js"></script>
    <script>
        var flashvars = {
            data_path: "/color_math/data.xml"
        };
        var params = {
            menu: "false",
            scale: "noScale",
            allowFullscreen: "true",
            allowScriptAccess: "always",
            bgcolor: "",
            wmode: "direct" // can cause issues with FP settings & webcam
        };
        var attributes = {
            id: "Colormath2"
        };
        swfobject.embedSWF(
			"/color_math/Colormath2.2.swf",
			"altContent", "740px", "390px", "10.0.0",
			"/color_math/expressInstall.swf",
			flashvars, params, attributes);
    </script>

    <div id="altContent">
        <p><a href="http://www.adobe.com/go/getflashplayer">Get Adobe Flash player</a></p>
    </div>

    <div class="clearfix"></div>
    }
</article>


