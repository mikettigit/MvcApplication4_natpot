        <div class="slider multiple-items multiple-items-hor" align="center" style="width: 90%; left: 50%; margin-left: -45%;">
            @{
                string CurrentGalleryURL = "/Content/themes/ictec/images/gallery/gates";
                var path = Server.MapPath(CurrentGalleryURL);
                var picSearchPattern = new System.Text.RegularExpressions.Regex(@"$(?<=\.(jpg|png|jpeg|gif))", System.Text.RegularExpressions.RegexOptions.IgnoreCase);
                var picnames = Directory.GetFiles(path).Where(f => picSearchPattern.IsMatch(f)).OrderBy(f => f).ToList();
                if (picnames.Count() > 0)
                {
                    for (var i = 0; i < picnames.Count(); i++)
                    {
                        <div><img src="@(CurrentGalleryURL + "/" + @Path.GetFileName(picnames[i]))" alt="" /></div>
                    }
                }
            }
        </div>
    </div>
</div>
